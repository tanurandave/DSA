import java.util.*;
import java.lang.*;
import java.io.*;

class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
		// your code goes here

        Scanner sc=new Scanner(System.in);
        int T=sc.nextInt();
        
        while(T-->0){
            int N=sc.nextInt();
            int X=sc.nextInt();
            
            int cycle=3*X;
            int fullCycles=N/cycle;
            int remaining =N%cycle;
            
            int countC=fullCycles;
            
            
            if(remaining>=3*X){
                countC+=1;
            }
            else if(remaining>=2*X+X){
                countC+=1;
            }
            System.out.println(countC);
        }
	}
}
