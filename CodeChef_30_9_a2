import java.util.*;
import java.lang.*;
import java.io.*;

class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
		// your code goes here
        Scanner sc=new Scanner(System.in);
        int T=sc.nextInt();
        
        while(T--> 0){
            int C=sc.nextInt();
            int X=sc.nextInt();
            int Y=sc.nextInt();
            
            int need=C-X;
            int cost=need *Y;
            
            System.out.println(cost);
        }
	}
}
